{
  "id": "ping",
  "name": "Ping",
  "description": "Tests connectivity to a host by sending ICMP echo requests",
  "icon": "ping",
  "version": "1.0.0",
  "author": "NetScout-Go",
  "license": "MIT",
  "parameters": [
    {
      "id": "host",
      "name": "Host",
      "description": "The hostname or IP address to ping",
      "type": "string",
      "required": true,
      "default": "8.8.8.8",
      "canIterate": true
    },
    {
      "id": "count",
      "name": "Count",
      "description": "Number of packets to send",
      "type": "number",
      "required": false,
      "default": 4,
      "min": 1,
      "max": 100,
      "step": 1,
      "canIterate": true
    },
    {
      "id": "continueToIterate",
      "name": "Continue to iterate?",
      "description": "Enable repeated execution of this plugin with the same parameters",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "iterationDelay",
      "name": "Iteration Delay (ms)",
      "description": "Delay between iterations in milliseconds",
      "type": "number",
      "required": false,
      "default": 5000,
      "min": 1000,
      "max": 60000,
      "step": 1000,
      "canIterate": true
    },
    {
      "id": "maxIterations",
      "name": "Max Iterations",
      "description": "Maximum number of iterations (0 = unlimited)",
      "type": "number",
      "required": false,
      "default": 0,
      "min": 0,
      "max": 100,
      "canIterate": true
    }
  ]
}
