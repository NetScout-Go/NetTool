{
  "id": "dns_propagation",
  "name": "DNS Propagation Checker",
  "description": "Checks DNS propagation of a domain across multiple DNS servers worldwide",
  "icon": "dns",
  "version": "1.0.0",
  "author": "NetScout-Go",
  "license": "MIT",
  "parameters": [
    {
      "id": "domain",
      "name": "Domain",
      "description": "The domain name to check propagation for",
      "type": "string",
      "required": true,
      "default": "example.com",
      "canIterate": true
    },
    {
      "id": "record_type",
      "name": "Record Type",
      "description": "The DNS record type to check",
      "type": "select",
      "required": true,
      "default": "A",
      "options": [
        {
          "value": "A",
          "label": "A (IPv4 Address)"
        },
        {
          "value": "AAAA",
          "label": "AAAA (IPv6 Address)"
        },
        {
          "value": "CNAME",
          "label": "CNAME (Canonical Name)"
        },
        {
          "value": "MX",
          "label": "MX (Mail Exchange)"
        },
        {
          "value": "TXT",
          "label": "TXT (Text)"
        },
        {
          "value": "NS",
          "label": "NS (Name Server)"
        }
      ],
      "canIterate": true
    },
    {
      "id": "timeout",
      "name": "Timeout",
      "description": "Timeout in seconds for each DNS query",
      "type": "number",
      "required": false,
      "default": 5,
      "min": 1,
      "max": 30,
      "step": 1,
      "canIterate": true
    },
    {
      "id": "custom_dns_servers",
      "name": "Custom DNS Servers",
      "description": "Comma-separated list of additional DNS servers to check (e.g., '8.8.8.8,1.1.1.1')",
      "type": "string",
      "required": false,
      "default": "",
      "canIterate": true
    },
    {
      "id": "continueToIterate",
      "name": "Continue to iterate?",
      "description": "Enable repeated execution of this plugin with the same parameters",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "iterationDelay",
      "name": "Iteration Delay (ms)",
      "description": "Delay between iterations in milliseconds",
      "type": "number",
      "required": false,
      "default": 5000,
      "min": 1000,
      "max": 60000,
      "step": 1000,
      "canIterate": true
    },
    {
      "id": "maxIterations",
      "name": "Max Iterations",
      "description": "Maximum number of iterations (0 = unlimited)",
      "type": "number",
      "required": false,
      "default": 0,
      "min": 0,
      "max": 100,
      "canIterate": true
    }
  ]
}
