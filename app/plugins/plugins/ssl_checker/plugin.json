{
  "id": "ssl_checker",
  "name": "SSL/TLS Certificate Checker",
  "description": "Validates SSL/TLS certificates of websites and displays expiration dates, chain validity, and security issues",
  "icon": "security",
  "version": "1.0.0",
  "author": "NetScout-Go",
  "license": "MIT",
  "parameters": [
    {
      "id": "hostname",
      "name": "Hostname",
      "description": "The hostname or domain to check (e.g., example.com)",
      "type": "string",
      "required": true,
      "default": "example.com",
      "canIterate": true
    },
    {
      "id": "port",
      "name": "Port",
      "description": "The port to connect to",
      "type": "number",
      "required": false,
      "default": 443,
      "min": 1,
      "max": 65535,
      "step": 1,
      "canIterate": true
    },
    {
      "id": "check_chain",
      "name": "Check Certificate Chain",
      "description": "Validate the entire certificate chain",
      "type": "boolean",
      "required": false,
      "default": true,
      "canIterate": true
    },
    {
      "id": "show_details",
      "name": "Show Certificate Details",
      "description": "Show detailed certificate information",
      "type": "boolean",
      "required": false,
      "default": true,
      "canIterate": true
    },
    {
      "id": "continueToIterate",
      "name": "Continue to iterate?",
      "description": "Enable repeated execution of this plugin with the same parameters",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "iterationDelay",
      "name": "Iteration Delay (ms)",
      "description": "Delay between iterations in milliseconds",
      "type": "number",
      "required": false,
      "default": 5000,
      "min": 1000,
      "max": 60000,
      "step": 1000,
      "canIterate": true
    },
    {
      "id": "maxIterations",
      "name": "Max Iterations",
      "description": "Maximum number of iterations (0 = unlimited)",
      "type": "number",
      "required": false,
      "default": 0,
      "min": 0,
      "max": 100,
      "canIterate": true
    }
  ]
}
