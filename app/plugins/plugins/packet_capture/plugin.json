{
  "id": "packet_capture",
  "name": "Network Packet Capture",
  "description": "Captures and analyzes network traffic using tcpdump",
  "icon": "traffic",
  "version": "1.0.0",
  "author": "NetScout-Go",
  "license": "MIT",
  "parameters": [
    {
      "id": "interface",
      "name": "Network Interface",
      "description": "The network interface to capture packets from",
      "type": "string",
      "required": true,
      "default": "eth0",
      "canIterate": true
    },
    {
      "id": "capture_filter",
      "name": "Capture Filter",
      "description": "BPF filter expression to filter packets (e.g., 'port 80', 'host 192.168.1.1')",
      "type": "string",
      "required": false,
      "default": "",
      "canIterate": true
    },
    {
      "id": "packet_count",
      "name": "Packet Count",
      "description": "Number of packets to capture (0 for unlimited)",
      "type": "number",
      "required": false,
      "default": 100,
      "min": 0,
      "max": 10000,
      "step": 10,
      "canIterate": true
    },
    {
      "id": "capture_timeout",
      "name": "Capture Timeout",
      "description": "Time in seconds to capture packets (0 for unlimited)",
      "type": "number",
      "required": false,
      "default": 10,
      "min": 0,
      "max": 300,
      "step": 5,
      "canIterate": true
    },
    {
      "id": "include_headers",
      "name": "Include Headers",
      "description": "Include packet headers in output",
      "type": "boolean",
      "required": false,
      "default": true,
      "canIterate": true
    },
    {
      "id": "continueToIterate",
      "name": "Continue to iterate?",
      "description": "Enable repeated execution of this plugin with the same parameters",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "iterationDelay",
      "name": "Iteration Delay (ms)",
      "description": "Delay between iterations in milliseconds",
      "type": "number",
      "required": false,
      "default": 5000,
      "min": 1000,
      "max": 60000,
      "step": 1000,
      "canIterate": true
    },
    {
      "id": "maxIterations",
      "name": "Max Iterations",
      "description": "Maximum number of iterations (0 = unlimited)",
      "type": "number",
      "required": false,
      "default": 0,
      "min": 0,
      "max": 100,
      "canIterate": true
    }
  ]
}
