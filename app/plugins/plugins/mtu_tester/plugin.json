{
  "author": "NetScout-Go",
  "description": "Determines the optimal MTU size for a connection to help diagnose packet fragmentation issues",
  "icon": "format_size",
  "id": "mtu_tester",
  "license": "MIT",
  "name": "MTU Size Tester",
  "parameters": [
    {
      "default": "8.8.8.8",
      "description": "The hostname or IP address to test MTU size for",
      "id": "target",
      "name": "Target Host",
      "required": true,
      "type": "string"
    },
    {
      "default": 576,
      "description": "Minimum MTU size to test",
      "id": "min_mtu",
      "max": 1500,
      "min": 68,
      "name": "Minimum MTU",
      "required": false,
      "step": 1,
      "type": "number"
    },
    {
      "default": 1500,
      "description": "Maximum MTU size to test",
      "id": "max_mtu",
      "max": 9000,
      "min": 576,
      "name": "Maximum MTU",
      "required": false,
      "step": 1,
      "type": "number"
    },
    {
      "default": 8,
      "description": "Step size for MTU testing",
      "id": "step_size",
      "max": 64,
      "min": 1,
      "name": "Step Size",
      "required": false,
      "step": 1,
      "type": "number"
    }
  ],
  "repository": "https://github.com/NetScout-Go/Plugin_mtu_tester",
  "version": "1.0.0"
}