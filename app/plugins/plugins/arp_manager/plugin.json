{
  "id": "arp_manager",
  "name": "ARP Manager",
  "description": "View and manage ARP table entries, including adding, deleting, and flushing entries",
  "icon": "network",
  "version": "1.0.0",
  "author": "NetScout-Go",
  "license": "MIT",
  "parameters": [
    {
      "id": "action",
      "name": "Action",
      "description": "The ARP operation to perform",
      "type": "select",
      "required": true,
      "default": "show",
      "options": [
        {
          "value": "show",
          "label": "Show ARP Table"
        },
        {
          "value": "get",
          "label": "Get ARP Entry"
        },
        {
          "value": "add",
          "label": "Add ARP Entry"
        },
        {
          "value": "delete",
          "label": "Delete ARP Entry"
        },
        {
          "value": "flush",
          "label": "Flush ARP Cache"
        }
      ],
      "canIterate": true
    },
    {
      "id": "interface",
      "name": "Network Interface",
      "description": "The network interface to use (e.g., eth0, wlan0)",
      "type": "string",
      "required": false,
      "default": "",
      "canIterate": true
    },
    {
      "id": "ip_address",
      "name": "IP Address",
      "description": "IP address for the ARP entry",
      "type": "string",
      "required": false,
      "default": "",
      "canIterate": true
    },
    {
      "id": "mac_address",
      "name": "MAC Address",
      "description": "MAC address for the ARP entry (format: 00:11:22:33:44:55)",
      "type": "string",
      "required": false,
      "default": "",
      "canIterate": true
    },
    {
      "id": "entry_type",
      "name": "Entry Type",
      "description": "Type of ARP entry (for adding entries)",
      "type": "select",
      "required": false,
      "default": "permanent",
      "options": [
        {
          "value": "permanent",
          "label": "Permanent"
        },
        {
          "value": "temp",
          "label": "Temporary"
        },
        {
          "value": "pub",
          "label": "Published (Proxy ARP)"
        }
      ],
      "canIterate": true
    },
    {
      "id": "verbose",
      "name": "Verbose Output",
      "description": "Show detailed output",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "numeric",
      "name": "Numeric Output",
      "description": "Show numeric addresses without hostname resolution",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "continueToIterate",
      "name": "Continue to iterate?",
      "description": "Enable repeated execution of this plugin with the same parameters",
      "type": "boolean",
      "required": false,
      "default": false,
      "canIterate": true
    },
    {
      "id": "iterationDelay",
      "name": "Iteration Delay (ms)",
      "description": "Delay between iterations in milliseconds",
      "type": "number",
      "required": false,
      "default": 5000,
      "min": 1000,
      "max": 60000,
      "step": 1000,
      "canIterate": true
    },
    {
      "id": "maxIterations",
      "name": "Max Iterations",
      "description": "Maximum number of iterations (0 = unlimited)",
      "type": "number",
      "required": false,
      "default": 0,
      "min": 0,
      "max": 100,
      "canIterate": true
    }
  ]
}
