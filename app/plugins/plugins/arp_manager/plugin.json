{
  "author": "NetScout-Go",
  "description": "View and manage ARP table entries, including adding, deleting, and flushing entries",
  "icon": "network",
  "id": "arp_manager",
  "license": "MIT",
  "name": "ARP Manager",
  "parameters": [
    {
      "default": "show",
      "description": "The ARP operation to perform",
      "id": "action",
      "name": "Action",
      "options": [
        {
          "label": "Show ARP Table",
          "value": "show"
        },
        {
          "label": "Get ARP Entry",
          "value": "get"
        },
        {
          "label": "Add ARP Entry",
          "value": "add"
        },
        {
          "label": "Delete ARP Entry",
          "value": "delete"
        },
        {
          "label": "Flush ARP Cache",
          "value": "flush"
        }
      ],
      "required": true,
      "type": "select"
    },
    {
      "default": "",
      "description": "The network interface to use (e.g., eth0, wlan0)",
      "id": "interface",
      "name": "Network Interface",
      "required": false,
      "type": "string"
    },
    {
      "default": "",
      "description": "IP address for the ARP entry",
      "id": "ip_address",
      "name": "IP Address",
      "required": false,
      "type": "string"
    },
    {
      "default": "",
      "description": "MAC address for the ARP entry (format: 00:11:22:33:44:55)",
      "id": "mac_address",
      "name": "MAC Address",
      "required": false,
      "type": "string"
    },
    {
      "default": "permanent",
      "description": "Type of ARP entry (for adding entries)",
      "id": "entry_type",
      "name": "Entry Type",
      "options": [
        {
          "label": "Permanent",
          "value": "permanent"
        },
        {
          "label": "Temporary",
          "value": "temp"
        },
        {
          "label": "Published (Proxy ARP)",
          "value": "pub"
        }
      ],
      "required": false,
      "type": "select"
    },
    {
      "default": false,
      "description": "Show detailed output",
      "id": "verbose",
      "name": "Verbose Output",
      "required": false,
      "type": "boolean"
    },
    {
      "default": false,
      "description": "Show numeric addresses without hostname resolution",
      "id": "numeric",
      "name": "Numeric Output",
      "required": false,
      "type": "boolean"
    }
  ],
  "repository": "https://github.com/NetScout-Go/Plugin_arp_manager",
  "version": "1.0.0"
}